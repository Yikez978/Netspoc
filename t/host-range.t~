#!/usr/bin/perl

use strict;
use Test::More;
use Test::Differences;
use lib 't';
use Test_Netspoc;

my ($title, $in, @out, $compiled);

############################################################
$title = 'Split and combine host ranges';
############################################################

$in = <<END;

network:n = {
 ip = 10.1.1.0/24
 host:2-7 = { range = 10.1.1.2-7; }
 host:8-15 = { range = 10.1.1.8-15; }
}

router:r = {
 model = IOS, FW;
 managed;
 interface:n = { ip = 10.1.1.1; hardware = ethernet0; }
 interface:x = { ip = 192.168.1.1; hardware 0 ethernet1; }
}

network:x = { ip = 192.168.1.0/24; }

service:test = {
 user = host:2-7, host:8-15; 
 permit src = user; dst = network.x; prt = tcp 80; 
}
END

